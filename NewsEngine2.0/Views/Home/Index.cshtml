@{
    ViewBag.Title = "Home Page";
}
<style>
    .div-carousel{
        background-repeat:no-repeat;
        background-size:cover;
        background-position:center;
        width:inherit;
        height:800px;
        position:relative;
        padding:0;

    }
        .div-carousel:before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            background: rgba(255,255,255,0.4);
        }
    .p-carousel {
        font-size: 25px;
        text-align: justify;
        position:relative;
        margin-left:20%;
        color:black;
        
        margin-right:20%;
    }
    .center{
        margin-top:0;
        margin-left:20%;
        margin-right:20%;
    }
    .h2-carousel{
        color:rgba(0,0,0,1);
    }
</style>
<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active div-carousel" style="background-image:url('../Images/@ViewBag.First.Medias[0].Path')" >
            <h2 class="text-center center h2-carousel">@ViewBag.First.News.Title</h2>
            <br />
            <p class="p-carousel truncate ">@ViewBag.First.News.Content</p>
            @*@if (ViewBag.First.Medias.Count > 0)
            {
            <img src="~/Images/@ViewBag.First.Medias[0].Path" />
            }*@
        </div>
        @foreach (NewsEngine2._0.Dto.MediaDto.MediaDto article in ViewBag.Article)
        {
            <div class="item div-carousel" style="background-image:url('../Images/@article.Medias[0].Path')">
                <h2 class="text-center center h2-carousel">@article.News.Title</h2>
                <br />
                <p class="p-carousel truncate">@article.News.Content</p>
                @*@if (article.Medias.Count > 0)
                {
                <img src="~/Images/@article.Medias[0].Path" />
                }*@
            </div>
        }
        
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
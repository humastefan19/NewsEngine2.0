@model NewsEngine2._0.Models.ProposedNews

@{ ViewBag.Titlu = "Adaugare stire"; }
<style>
    .margin-title {
        margin-top: 20px;
    }

    .margin-textarea {
        margin-top: 30px;
    }

    .length {
        max-width: 100%;
        margin: 0;
    }
</style>


<form method="post" class="form-horizontal" action="/ProposedNews/New">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h2>@ViewBag.Titlu</h2> <br />
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("Title", "Titlu Articol", new { @class = "col-sm-2 control-label margin-title" })
                <br />
                <div class="col-sm-10">
                    @Html.TextBox("Title", null, new { @class = "form-control length" })
                </div>
                <br />
                <br />
            </div>
            <div class="form-group">
                @Html.Label("Content", "Continut Articol", new { @class = "col-sm-2 control-label margin-textarea" })
                <br />
                <div class="col-sm-10">
                    <textarea class="form-control length" rows="3" name="Content"></textarea>
                </div>
                <br />
                <br />
            </div>

            @Html.Hidden("CreateDate", DateTime.Now, new { @class = "form-control" })

            <div class="form-group">
                <label class="col-sm-2 control-label">Selectati categoria</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Value", "Text"), "Selectati categoria", new { @class = "form-control length" })
                </div>
                <br />
            </div>
        </div>
        <div class="panel-footer">
            <button class="btn btn-sm btn-success" type="submit">Adauga articol</button>
            <a class="btn btn-sm btn-danger" href="/ProposedNews/New">Resetare</a>
        </div>
    </div>
</form>


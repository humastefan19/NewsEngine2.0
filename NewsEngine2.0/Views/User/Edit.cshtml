@model NewsEngine2._0.Models.ApplicationUser

@{ ViewBag.Title = "Editare rol utilizator"; }

<style>
    .margin-title {
        margin-top: 20px;
    }

    .margin-textarea {
        margin-top: 30px;
    }

    .length {
        max-width: 100%;
        margin: 0;
    }
</style>




<form method="post" action="/User/Edit/@Model.Id">

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.Id)

    <div class="panel panel-success">
        <div class="panel-heading">
            <h2>@ViewBag.Title</h2> <br />
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("UserName", "Nume utilizator", new { @class = "col-sm-2 control-label margin-title" })
                <br />
                <div class="col-sm-10">
                    @Html.TextBox("Username", Model.UserName, new { @class = "form-control length" })
                </div>
                <br />
                <br />
            </div>
            <div class="form-group">
                @Html.Label("Email", "Email utilizator", new { @class = "col-sm-2 control-label margin-title" })
                <br />
                <div class="col-sm-10">


                    @Html.TextBox("Email", Model.Email, new { @class = "form-control length" })
                </div>
                <br />
                <br />
            </div>
            <div class="form-group">
                @Html.Label("PhoneNumber", "Numar telefon", new { @class = "col-sm-2 control-label margin-title" })
                <br />
                <div class="col-sm-10">


                    @Html.TextBox("PhoneNumber", Model.PhoneNumber, new { @class = "form-control length" })
                </div>
                <br />
                <br />
            </div>


            @if (User.IsInRole("Administrator"))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">Selectati rolul</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", (string)ViewBag.userRole), null, new { @class = "form-control length" })
                    </div>
                    <br />
                </div>
            }
            </div>
        <div class="panel-footer">
            <button class="btn btn-sm btn-success" type="submit">Modifica datele utilizatorului</button>
        </div>
    </div>


</form>
@model NewsEngine2._0.Models.Category
@{
    ViewBag.Title = "Adaugare Categorie";
}



<h2>Adaugare Categorie</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Category"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Name", "Denumire categorie")
    <br />

    @Html.TextBox("Name", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Adauga categorie</button>
}


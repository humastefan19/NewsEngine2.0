
@model NewsEngine2._0.Models.Comment

@using (Html.BeginForm(actionName: "New", controllerName: "Comment"))
{

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Hidden("NewsId",Model.NewsId);
    @Html.Label("Description", "Text comentariu")
    <br />

    @Html.TextBox("Description", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Adauga comentariu</button>
}
